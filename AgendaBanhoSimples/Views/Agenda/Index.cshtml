@model IEnumerable<AgendaModel>

<div class="container">
    <div class="d-flex justify-content-between align-itens-center mb-5">
        <h3 q>Registros de Banho</h3>
        <a class="btn btn-success mx-4" asp-controller="Agenda" asp-action="Cadastrar">Cadastrar novo horário</a>
    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["MensagemErro"]
        </div>
    }

    <table id="Agenda"class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Data</th>
                <th scope="col">Cachorro(s)</th>
                <th scope="col">Cliente</th>
                <th scope="col">Observações</th>
                <th scope="col">Valor</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @if (Model != null)
            {
                @foreach (var horario in Model)
                {
                    <tr>
                        <th>@horario.DataBanho.ToShortDateString()</th>
                        <td>@horario.Cachorro</td>
                        <td>@horario.Cliente</td>
                        <td>@horario.Observacoes</td>
                        <td>@horario.Valor</td>
                        <td>
                            <a asp-controller="Agenda" asp-action="Editar" asp-route-id="@horario.IdBanho" class="btn btn-warning mx-2"><i class="bi bi-pencil-square mx-2"></i>Editar</a>
                            <a asp-controller="Agenda" asp-action="Excluir" asp-route-id="@horario.IdBanho" class="btn btn-danger mx-2"><i class="bi bi-trash mx-2"></i>Excluir</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
